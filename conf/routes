# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index
GET     /test                       controllers.HomeController.test

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# authentications
GET     /signup                     controllers.SignUpController.get
POST    /signup                     controllers.SignUpController.post
GET     /signin                     controllers.SignInController.get
POST    /signin                     controllers.SignInController.post

# task
GET     /task                       controllers.task.ListTasksController.listTasks(filter: Option[Seq[String]])
POST    /task                       controllers.task.ListTasksController.searchTasks()
GET     /task/create                controllers.task.CreateTaskController.createTaskForm
POST    /task/create                controllers.task.CreateTaskController.createTask
GET     /task/:id/edit              controllers.task.EditTaskController.editTaskForm(id: Long)
POST    /task/:id/edit              controllers.task.EditTaskController.editTask(id: Long)
POST    /task/:id/delete            controllers.task.DeleteTaskController.deleteTask(id: Long)

# api
GET     /task/:id.json              controllers.task.api.TaskController.getTask(id: Long)
PUT     /task/:id.json              controllers.task.api.TaskController.putTask(id: Long)

# search